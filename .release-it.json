{
  "increment": "major",
  "ci": true,
  "git": {
    "commitMessage": "v",
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "requireUpstream": true,
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "autoGenerate": true,
    "assets": "out/*"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["npm run prepack:all", "npm run lint:code", "npm run docs"],
    "after:bump": "npm run docs && git add .",
    "before:github:release": "npm run release:prepare-assets"
  }
}
